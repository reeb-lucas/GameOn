            </Border>
            <TextBlock HorizontalAlignment="Left" Margin="25,138,0,0" Text="X" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.447"/>
            <TextBlock HorizontalAlignment="Left" Margin="366,138,0,0" Text="X+1" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Rectangle HorizontalAlignment="Left" Height="26" Margin="38,136,0,0" Stroke="Black" VerticalAlignment="Top" Width="232" Fill="#FF5D1919"/>
            <TextBlock HorizontalAlignment="Left" Margin="159,138,0,0" Text="####/####" TextWrapping="Wrap" VerticalAlignment="Top"/>

            <TextBlock HorizontalAlignment="Left" Margin="38,208,0,0" Text="Today" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
            <TextBlock HorizontalAlignment="Left" Margin="64,256,0,0" Text="Task 1                  ##XP # Coins" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="273"/>
            <TextBlock HorizontalAlignment="Left" Margin="64,288,0,0" Text="Task 2                  ##XP # Coins" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="273"/>
            <TextBlock HorizontalAlignment="Left" Margin="64,320,0,0" Text="Task 3                  ##XP # Coins" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="273"/>
            <TextBlock HorizontalAlignment="Left" Margin="64,352,0,0" Text="Task 4                  ##XP # Coins" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="273"/>
            <TextBlock HorizontalAlignment="Left" Margin="38,0,0,0" Text="Tomorrow" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>
            <TextBlock HorizontalAlignment="Left" Margin="64,435,0,0" Text="Task 1                  ##XP # Coins" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="273"/>
            <TextBlock HorizontalAlignment="Left" Margin="64,467,0,0" Text="Task 2                  ##XP # Coins" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="273"/>
            <TextBlock HorizontalAlignment="Left" Margin="64,499,0,0" Text="Task 3                  ##XP # Coins" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="273"/>

        </Grid>

    </Grid>
</Page>
